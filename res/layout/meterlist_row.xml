<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent" android:layout_height="wrap_content">

<ImageView android:layout_width="wrap_content" android:id="@+id/meterImage" android:layout_height="wrap_content" android:src="@drawable/metericon" android:layout_margin="5dp" android:scaleType="fitXY"></ImageView><TableLayout android:id="@+id/TableLayout01" android:layout_height="fill_parent" android:layout_width="fill_parent"><TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="10pt" android:textStyle="bold" android:textColor="#FFFFFFFF" android:text="Meter" android:id="@+id/tv_meterType"></TextView>

</TableRow><TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Reading" android:id="@+id/tv_meterReading"></TextView>
</TableRow><TableRow android:id="@+id/TableRow03" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_remarks" android:text="Remarks"></TextView>
</TableRow>

</TableLayout>
</LinearLayout>
